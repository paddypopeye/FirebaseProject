<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="Login to your Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/loginTxtView" android:textAlignment="center"
            android:textSize="24sp" android:textStyle="bold" android:paddingTop="10dp" android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_email_login"
            android:padding="10dp" android:background="#fff" android:hint="Your Email"
            android:textColorHint="#557"
            android:textAlignment="center" android:textSize="24sp" android:autofillHints=""
            android:textColor="#000" android:textStyle="italic" android:inputType="text"
            android:layout_below="@+id/loginTxtView" android:layout_centerInParent="true" android:layout_marginTop="106dp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_password_login"
            android:layout_below="@+id/user_email_login"
            android:layout_marginTop="35dp"
            android:padding="10dp"
            android:background="#fff" android:hint="Password" android:textColorHint="#557"
            android:textAlignment="center" android:textSize="24sp" android:layout_centerHorizontal="true"
            android:textColor="#000" android:textStyle="italic" android:inputType="text"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false" android:layout_marginTop="78dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="20dp" android:layout_marginBottom="218dp"
            android:id="@+id/ll_login" android:layout_below="@+id/user_password_login" android:weightSum="2">
        <Button
                android:text="Reset Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_goBack"
                android:layout_weight="1"
                android:background="#555" android:layout_alignTop="@+id/ll_login"
                android:layout_alignStart="@+id/ll_login"/>
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_loginActivity"
                android:layout_weight="1"
                android:background="#555"/>
    </LinearLayout>


</RelativeLayout>