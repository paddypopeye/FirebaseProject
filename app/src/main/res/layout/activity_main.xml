<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000">


    <TextView
            android:text="@string/create_an_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
            android:textSize="24sp" android:textStyle="bold" android:paddingTop="10dp" android:layout_marginTop="40dp"
            android:textColor="#fff"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_email"
            android:layout_centerInParent="true"
            android:padding="10dp" android:background="#fff" android:hint="@string/your_email"
            android:textColorHint="#000"
            android:textAlignment="center" android:textSize="24sp" android:autofillHints=""
            android:textColor="#000" android:textStyle="italic" android:inputType="text"/>


    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_password"
            android:layout_below="@id/user_email"
            android:layout_marginTop="35dp"
            android:padding="10dp"
            android:background="#fff" android:hint="@string/add_password" android:textColorHint="#000"
            android:textAlignment="center" android:textSize="24sp" android:layout_centerHorizontal="true"
            android:textColor="#000" android:textStyle="italic" android:inputType="text"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_marginTop="80dp"
            android:layout_marginStart="80dp" android:layout_marginEnd="80dp" android:layout_marginBottom="80dp">
        <Button
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sign_up"
                android:layout_weight="1"
                android:background="#555"/>
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login"
                android:layout_weight="1"
                android:background="#555"/>
    </LinearLayout>

</RelativeLayout>