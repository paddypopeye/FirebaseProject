<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".changeEmail"
        android:background="#f00">


    <TextView
            android:text="Change Your Email Address"
            android:textColor="#000"
            android:textSize="30sp"
            android:padding="5dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ChangeEmailTxt" android:layout_marginTop="45dp" android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" android:layout_marginBottom="5dp"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/ChangeEmailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="false"
            android:layout_centerInParent="true" android:layout_marginTop="30dp" android:id="@+id/ll_changeEmail">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_change" android:importantForAutofill="no" android:layout_margin="28dp"
                android:padding="10dp" android:hint="Your Email" android:textColorHint="#fff"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass_change" android:layout_margin="28dp" android:padding="10dp"
                android:textColorHint="#fff"
                android:hint="Your Password"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_change_new" android:layout_margin="28dp" android:padding="10dp"
                android:hint="Your new Email address" android:textColorHint="#fff"/>
    </LinearLayout>
    <Button
            android:text="Change Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/changeEmail"
            android:layout_below="@+id/ll_changeEmail"
            android:background="#00f" android:textSize="24sp" android:textStyle="italic" android:textColor="#f00"
            android:onClick="updateEmail"/>
</RelativeLayout>